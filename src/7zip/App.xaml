<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="_7zip.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helper="using:_7zip.Helpers"
    xmlns:local="using:_7zip">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!--  Other merged dictionaries here  -->
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Styles -->
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark" Source="./Styles/Themes.Dark.xaml" />
                <ResourceDictionary x:Key="Light" Source="./Styles/Themes.Light.xaml" />
            </ResourceDictionary.ThemeDictionaries>
            
            <!--  Converters  -->
            <helper:PathToFileNameConverter x:Key="PathToFileNameConverter" />
            <helper:BooleanInversionConverter x:Key="BooleanInversionConverter" />
            <helper:BasicCalculateConverter x:Key="BasicCalculateConverter" />
            <helper:IsPausedSymbolIconConverter x:Key="IsPausedSymbolIconConverter" />
            <helper:IsStringContainedByConverter x:Key="IsStringContainedByConverter" />
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
